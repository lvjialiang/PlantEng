@{
    ViewBag.Title = "广告位列表";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-content">
    <div class="adm-nav">
        <ul>
            <li><a href="/adm/slot/list">广告位</a></li>
            <li><a href="/adm/delivery/list">广告</a></li>
            <li><a href="/adm/material/list">广告物料库</a></li>
        </ul>
    </div>
    <div class="clear"></div>
    <fieldset>
        <legend>广告位</legend>
        <a href="/adm/slot/create" class="btn-add">新建广告位</a>
        <div class="clear"></div>
        <table class="tblist">
           <tr>
            <th>广告位名称</th>
            <th width="10%">尺寸</th>
            <th width="10%">操作</th>
           </tr>
           @foreach(var item in ViewBag.List){
            <tr>
                <td style="text-align:left"><a href="detail?id=@(item.Id)">@(item.Name)</a></td>
                <td align="center">@(item.Width)*@(item.Height)</td>
                <td align="center"><a href="modify?id=@(item.Id)">修改</a>&nbsp;&nbsp;<a href="/adm/delivery/list?slotId=@(item.Id)&slotName=@(item.Name)">广告</a></td>
            </tr>
           }
        </table>
        @Html.Raw(PlantEng.Common.PagerBarHelper.Render(ViewBag.List.PageIndex, ViewBag.List.PageSize, ViewBag.List.TotalItemCount, new { @class = "pagerbar" }))
    </fieldset>
</div>
